{
  "example": true,
  "description": "ملف مثال للإعدادات المتقدمة",
  "system": {
    "name": "Persistent Master-Slave System",
    "version": "1.0.0",
    "environment": "production"
  },
  "vms": {
    "desiredCount": 3,
    "minCount": 2,
    "maxCount": 10,
    "creationInterval": 120,
    "lifetimeSeconds": 360,
    "healthCheckInterval": 30
  },
  "masterElection": {
    "strategy": "max-remaining-time",
    "updateInterval": 60,
    "weights": {
      "remainingTime": 0.5,
      "cpuUsage": 0.3,
      "memoryUsage": 0.2
    }
  },
  "jobExecution": {
    "maxJobsPerVM": 10,
    "maxConcurrentJobs": 3,
    "jobTimeout": 600,
    "retryCount": 3,
    "retryDelay": 5
  },
  "monitoring": {
    "enabled": true,
    "realtime": true,
    "metricsInterval": 10,
    "reportInterval": 3600,
    "alertsEnabled": true
  },
  "thresholds": {
    "cpu": {
      "warning": 75,
      "critical": 90
    },
    "memory": {
      "warning": 80,
      "critical": 95
    },
    "disk": {
      "warning": 85,
      "critical": 95
    }
  },
  "notifications": {
    "email": {
      "enabled": true,
      "recipients": ["admin@example.com"]
    },
    "slack": {
      "enabled": true,
      "webhook": "https://hooks.slack.com/..."
    },
    "sms": {
      "enabled": false,
      "phoneNumbers": []
    }
  },
  "backup": {
    "enabled": true,
    "interval": 3600,
    "retention": 86400,
    "location": "backups/"
  },
  "logging": {
    "level": "INFO",
    "format": "json",
    "destination": "logs/",
    "maxSize": 10485760,
    "maxFiles": 10
  },
  "security": {
    "encryption": true,
    "tlsVersion": "1.3",
    "certificatePath": "certs/",
    "validateCertificates": true
  },
  "performance": {
    "cacheEnabled": true,
    "cacheSize": 1024,
    "connectionPoolSize": 10,
    "timeout": 30000
  },
  "customSettings": {
    "environment": "production",
    "region": "us-east-1",
    "tier": "standard",
    "features": {
      "autoScaling": true,
      "autoHealing": true,
      "autoBackup": true,
      "autoReporting": true
    }
  }
}
