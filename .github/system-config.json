{
  "version": "2.0.0",
  "systemName": "Persistent Master-Slave System with Tailscale",
  
  "tailscale": {
    "enabled": true,
    "networkName": "persistent-cluster",
    "autoConnect": true,
    "exitNode": false,
    "subnet": "100.64.0.0/10"
  },
  
  "notifications": {
    "email": {
      "enabled": true,
      "sendOnVmCreation": true,
      "sendOnNetworkChange": true,
      "sendCredentials": true,
      "schedule": "0 */6 * * *"
    }
  },
  
  "vmConfig": {
    "desiredVmCount": 3,
    "minVmCount": 2,
    "maxVmCount": 10,
    "vmLifetime": 3600,
    "defaultUsername": "admin",
    "passwordLength": 16,
    "sshKeyType": "rsa",
    "sshKeyBits": 4096
  }
}
